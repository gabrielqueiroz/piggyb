<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
        <h3>My Piggy Banks</h3>
    </div>
    <div class="col-md-6 text-right">
      <%= link_to 'Create a PiggyBank', new_piggy_bank_path, class: "btn btn-primary right" %>
    </div>
  </div>
</div>

<div class="container mt-4">
  <% if @piggy_banks.blank? %>
    <p> You don't have any Piggy Banks yet. Go ahead and create your first Piggy Bank </p>
  <% else %>
    <div class="row">
      <% @piggy_banks.each do |piggy_bank| %>
        <div class="col-md-6">
          <div class="card mb-4">
            <div class="card-body">
              <%= render partial: "piggy_banks/piggy_bank_details", locals: { piggy_bank: piggy_bank } %>
            </div>
            <div class="card-footer text-muted">
              <%= link_to 'Edit', "/piggy_bank/#{piggy_bank.id}", class: "card-link" %>
              <%= link_to 'Destroy', piggy_bank_path(piggy_bank), method: :delete, data: { confirm: "Destroy piggy bank #{piggy_bank.name}?" }, class: "card-link"%>
              <%= link_to 'Manage', piggy_bank_movements_path(piggy_bank.id), class: "card-link" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

</div>
