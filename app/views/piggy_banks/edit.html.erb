<div class="container pt-5">
  <div class="row">
    <div class="col-md-6">
        <h3>Edit a Piggy Bank</h3>
    </div>
  </div>
</div>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      <h5>Actual Piggy Bank</h5>
      <div class="card">
        <div class="card-body">
          <%= render partial: "piggy_banks/piggy_bank_details", locals: { piggy_bank: @piggy_bank } %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <h5>Updating Piggy Bank info to</h5>
      <div class="card">
        <div class="card-body">
          <%= form_with scope: :piggy_bank, url: "/piggy_banks/#{@piggy_bank.id}", method: :put do |form| %>
            <div class="form-group">
              <%= form.text_field :name, class: "form-control", placeholder: "name", required: true %>
            </div>
            <div class="form-group">
              <%= form.text_field :description, class: "form-control", placeholder: "description", required: true  %>
            </div>
            <div class="form-group">
              <select name="piggy_bank[currency]" id="piggy_bank_currency" required=true class="custom-select">
                <%= render partial: "piggy_banks/currencies" %>
              </select>
            </div>
            <%= form.submit "Update Piggy Bank", class: "btn btn-primary btn-block" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
