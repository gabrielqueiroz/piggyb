<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
        <h3><b><%= t('.editing') %> <%= @piggy_bank.name %></b></h3>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <hr />
      <h5 class="mb-4"><%= t '.actual_piggy_bank' %></h5>
      <div class="card shadow">
        <div class="card-body">
          <%= render partial: "piggy_banks/piggy_bank_details", locals: { piggy_bank: @piggy_bank } %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <hr />
      <h5 class="mb-4"><%= t '.updating_piggy_bank' %></h5>
      <div class="card shadow">
        <div class="card-body">
          <%= form_with scope: :piggy_bank, url: "/piggy_banks/#{@piggy_bank.id}", method: :put do |form| %>
            <div class="form-group">
              <%= form.text_field :name, class: "form-control", placeholder: t('.name'), required: true %>
            </div>
            <div class="form-group">
              <%= form.text_field :description, class: "form-control", placeholder: t('.description'), required: true  %>
            </div>
            <div class="form-group">
              <select name="piggy_bank[currency]" id="piggy_bank_currency" required=true class="custom-select">
                <%= render partial: "piggy_banks/currencies" %>
              </select>
            </div>
            <%= form.submit t('.update_piggy_bank'), class: "btn btn-primary btn-block" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
