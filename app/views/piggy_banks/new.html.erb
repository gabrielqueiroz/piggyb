<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
        <h3><%= t '.create_piggy_bank' %></h3>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <hr />
      <h5 class="mb-4"><%= t '.what_is_piggy_bank' %></h5>
      <p><%= t '.description_1' %></p>
      <p><%= t '.description_2' %></p>

      <small class="form-text text-muted mb-2"><%= t '.examples' %></small>
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h5><b><%= t '.example_title_1' %></b></h5>
          <h6><%= t '.example_description_1' %></h6>
          BRL $ 200.0
        </div>
      </div>

      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h5><b><%= t '.example_title_2' %></b></h5>
          <h6><%= t '.example_description_2' %></h6>
          CAD $ 1,000.0
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <hr />
      <h5 class="mb-4"><%= t '.creating_piggy_bank' %></h5>
      <div class="card mb-4 shadow">
        <div class="card-body">
          <p class="text-center"><%= image_tag "safe.gif", class: "half-size" %></p>
          <%= form_with scope: :piggy_bank, url: piggy_banks_path do |form| %>
            <div class="form-group">
              <%= form.text_field :name, class: "form-control", placeholder: t('.name'), required: true %>
            </div>
            <div class="form-group">
              <%= form.text_field :description, class: "form-control", placeholder: t('.description'), required: true  %>
            </div>
            <div class="form-row">
              <div class="form-group col-md-3">
                <select name="piggy_bank[currency]" id="piggy_bank_currency" required=true class="custom-select">
                  <%= render partial: "piggy_banks/currencies" %>
                </select>
              </div>
              <div class="form-group col-md-9">
                <%= form.text_field :balance, class: "form-control", value: "0.0", type: "number", required: true  %>
                <small id="balanceHelp" class="form-text text-muted"><%= t '.balance_help' %></small>
              </div>
            </div>

            <%= form.submit t('.create_piggy_bank'), class: "btn btn-primary btn-block" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
