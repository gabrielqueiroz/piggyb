<div class="container pt-5">
  <div class="row">
    <div class="col-md-6">
        <h3>Create a Piggy Bank</h3>
    </div>
  </div>
</div>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      Text explained examples of use of piggy banks
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <%= form_with scope: :piggy_bank, url: piggy_banks_path do |form| %>
            <div class="form-group">
              <%= form.text_field :name, class: "form-control", placeholder: "name", required: true %>
            </div>
            <div class="form-group">
              <%= form.text_field :description, class: "form-control", placeholder: "description", required: true  %>
            </div>
            <div class="form-row">
              <div class="form-group col-md-3">
                <select name="piggy_bank[currency]" id="piggy_bank_currency" required=true class="custom-select">
                  <%= render partial: "piggy_banks/currencies" %>
                </select>
              </div>
              <div class="form-group col-md-9">
                <%= form.text_field :balance, class: "form-control", placeholder: "0.0", required: true  %>
              </div>
            </div>

            <%= form.submit "Create Piggy Bank", class: "btn btn-primary btn-block" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
