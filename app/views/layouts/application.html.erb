<!DOCTYPE html>
<html>
  <head>
    <title>Piggyb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <nav class="navbar navbar-light bg-light">
        <div class="container">
          <div class="row">
            <% unless session[:user_id].blank? %>
              <%= link_to '/logout', class: "btn btn-sm btn-outline-secondary" do %> logout <% end %>
            <% end %>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main>

    <footer class="footer">
      <div class="container text-center small">
        <span class="text-muted">Developed by <b>Gabriel Queiroz</b> â€¢ 2018</span>
      </div>
    </footer>

  </body>
</html>
