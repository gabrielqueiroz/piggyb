<div class="row pt-3 justify-content-center">
  <%= link_to '/', style: "text-decoration: none" do %>
    <h1><span class="text-white">Piggy</span>â€¢B</h1>
  <% end %>
</div>

<div class="d-flex justify-content-center pt-3">

  <div class="col-md-4">
    <div class="card pt-3">
      <div class="card-body">
        <% if flash[:notice] %>
          <div class="alert alert-danger" role="alert"> <%= flash.notice() %> </div>
        <% end %>

        <%= form_with scope: :login, url: logins_path do |form| %>
          <div class="form-group">
            <%= form.text_field :email, class: "form-control", placeholder: "email", required: true %>
          </div>
          <div class="form-group">
            <%= form.text_field :password, class: "form-control", type: "password", placeholder: "password", required: true %>
          </div>

          <div class="form-group">
            <%= form.submit "Sign in", class: "btn btn-success btn-block" %>
          </div>
        <% end %>
        <div class="form-group">
          <%= link_to "Sign up", new_user_path, class: "btn btn-primary btn-block" %>
        </div>
      </div>
    </div>
  </div>

</div>
