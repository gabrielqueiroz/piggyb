<div class="container">
  <h1 class="text-center"><b>Piggy</b>â€¢B</h1>
</div>

<div class="container pt-3">
  <div class="row">
    <div class="col-sm mb-2 text-center">
      <div class="card fill-height shadow-sm">
        <div class="card-body">
          <%= image_tag "piggy_bank.gif", class: "fill-width" %>
          <p class="text-muted mt-4">
            PiggyB is a Web Application and API that helps you organize your personal finance.
          </p>
          <p class="text-muted mt-4">
            Create Piggy Banks for you personal savings, control your expenses and reach your goals. Start it now!
          </p>
        </div>
      </div>
    </div>

    <div class="col-sm mb-2">
        <% if flash[:notice] %>
          <div class="alert alert-danger" role="alert"> <%= flash.notice() %> </div>
        <% end %>

        <div class="card shadow">
          <div class="card-body">

            <%= form_with scope: :login, url: '/login' do |form| %>
              <div class="form-group">
                <%= form.text_field :email, class: "form-control", placeholder: "email", required: true %>
              </div>
              <div class="form-group">
                <%= form.text_field :password, class: "form-control", type: "password", placeholder: "password", required: true %>
              </div>

              <%= form.submit "Sign in", class: "btn btn-primary btn-block" %>
            <% end %>
          </div>
        </div>
        <hr /><small class="form-text text-muted text-center">Don't have and account? Sign up now !</small>
        <div class="card shadow mt-2">
          <div class="card-body">
            <%= form_with scope: :user, url: users_path do |form| %>
              <div class="form-group">
                <%= form.text_field :name, class: "form-control", placeholder: "name", required: true %>
              </div>
              <div class="form-group">
                <%= form.text_field :email, class: "form-control", placeholder: "email", required: true  %>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
              </div>
              <div class="form-group">
                <%= form.text_field :password, class: "form-control", type: "password", placeholder: "password", required: true  %>
              </div>
              <div class="form-group">
                <%= form.text_field :password_confirmation, class: "form-control", type: "password", placeholder: "confirm password", required: true  %>
              </div>

              <%= form.submit "Sign up", class: "btn btn-success btn-block" %>
            <% end %>
          </div>
      </div>
    </div>
  </div>

</div>
