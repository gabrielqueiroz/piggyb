<div class="container pt-5">
  <h1 class="text-center">Piggyâ€¢B</h1>
</div>

<div class="container pt-5">
  <div class="row">

    <div class="col-md-6 text-center">
      <%= image_tag "piggy_bank", class: "center-block half-size" %>
      <p class="mt-4">
        PiggyB is a Web Application and API that helps you organize and share your personal finance.
      </p>
      <p class="mt-4">
        Create piggy banks for you personal expenses and even share with a friend a common objective.
      </p>
    </div>

    <div class="col-md-6">
        <% if flash[:notice] %>
          <div class="alert alert-danger" role="alert"> <%= flash.notice() %> </div>
        <% end %>

        <div class="card">
          <div class="card-body">

            <%= form_with scope: :login, url: '/login' do |form| %>
              <div class="form-group">
                <%= form.text_field :email, class: "form-control", placeholder: "email", required: true %>
              </div>
              <div class="form-group">
                <%= form.text_field :password, class: "form-control", type: "password", placeholder: "password", required: true %>
              </div>

              <%= form.submit "Sign in", class: "btn btn-success btn-block" %>
            <% end %>
          </div>
        </div>

        <div class="card mt-4">
          <div class="card-body">
            <%= form_with scope: :user, url: users_path do |form| %>
              <div class="form-group">
                <%= form.text_field :name, class: "form-control", placeholder: "name", required: true %>
              </div>
              <div class="form-group">
                <%= form.text_field :email, class: "form-control", placeholder: "email", required: true  %>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
              </div>
              <div class="form-group">
                <%= form.text_field :password, class: "form-control", type: "password", placeholder: "password", required: true  %>
              </div>
              <div class="form-group">
                <%= form.text_field :password_confirmation, class: "form-control", type: "password", placeholder: "confirm password", required: true  %>
              </div>

              <%= form.submit "Sign up", class: "btn btn-primary btn-block" %>
            <% end %>
          </div>
      </div>
    </div>

</div>
